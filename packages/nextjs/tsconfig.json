{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "lib",
        "strictNullChecks": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "es2017"
        ],
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "taro/src/**/*",
        "router/src/**/*",
        "components/src/**/*",
        "postcss/src/**/*"
    ]
}
