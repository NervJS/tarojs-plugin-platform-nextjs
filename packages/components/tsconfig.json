{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "lib",
        "strictNullChecks": true,
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "es2017"
        ],
        "skipLibCheck": true,
        "allowJs": true,
        "paths": {
            "@taror/components": ["src/index.ts"],
            "@taror/components/*": ["src/*"],
        }
    },
    "include": [
        "src/**/*"
    ]
}
